#include <stdio.h>
#include <stdlib.h>

int main()
{

	int i,n,c=0 ;
	char ch = 'y' ;

	while (ch !='n')  {

	printf("< n이 소수인지 아닌지 판별하는 프로그램 입니다. >\n\n") ;
	printf("정수를 입력하시오...") ;
	scanf("%d",&n) ;

	c= 0 ;

	for(i=2 ;i<n ; i++) {

		if(n % i==0)

			c++ ; }

	if(c == 0)
		
		printf("\n\n%d는 소수입니다.",n);
	else

		printf("\n\n%d는 소수가 아닙니다",n) ;


     printf("\n\n\n계속 하시겠습니까?..y/n : ") ;
	 scanf("\n%c",&ch) ;
	 fflush(stdin) ;

	 system("cls") ;


	}


	printf("\n\n\n\n\n") ;

	return 0 ;
}
