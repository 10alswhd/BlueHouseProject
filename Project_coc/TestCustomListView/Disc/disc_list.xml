<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<ScrollView android:layout_width="wrap_content" android:layout_height="wrap_content" >
		
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:text="" android:textColor="#ff00ff00"
		android:textSize="30dp" android:id="@+id/discList_tit" android:layout_marginTop="10dp"/>

	<View android:layout_width="wrap_content" android:layout_height="5dp"
		android:background="#ffffff" android:layout_marginTop="10dp"/>
		
	<TextView android:layout_width="fill_parent" android:layout_height="100dp" 
	android:text="" android:layout_marginTop="10dp" android:id="@+id/discList_txt1"/>
	
	<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" 
	android:text="스트레스 표현과 해소" android:background="#fff0f0ff" android:textColor="#ff000000"
	android:textSize="18dp"/>
	
	<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" 
	android:text="" android:layout_marginTop="10dp" android:id="@+id/discList_txt2"/>
	
	
<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" 
	android:text="장점" android:background="#fff0f0ff" android:textColor="#ff000000"
	android:textSize="18dp" android:layout_marginTop="10dp"/>
	
	<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" 
	android:text="" android:layout_marginTop="10dp" android:id="@+id/discList_txt3"/>


<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" 
	android:text="단점" android:background="#fff0f0ff" android:textColor="#ff000000"
	android:textSize="18dp" android:layout_marginTop="10dp"/>
	
	<TextView android:layout_width="fill_parent" android:layout_height="100dp" 
	android:text="" android:layout_marginTop="10dp" android:id="@+id/discList_txt4"/>

	</LinearLayout>
	
	</ScrollView>
	
</LinearLayout>
